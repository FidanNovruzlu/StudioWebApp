@model CreateTeamVM

<div class="col-lg-8 col-xlg-9 col-md-12">
    <div class="card">
        <div class="card-body">
            <form class="form-horizontal form-material" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-4">
                    <label class="col-md-12 p-0" asp-for="Name"></label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="Name" class="form-control p-0 border-0">
                               <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Surname" class="col-md-12 p-0">Surname</label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="Surname" class="form-control p-0 border-0">
                        <span class="text-danger" asp-validation-for="Surname"></span>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ProfileImage" class="col-md-12 p-0"></label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="ProfileImage"  class="form-control p-0 border-0">
                        <span class="text-danger" asp-validation-for="ProfileImage"></span>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="col-sm-12" asp-for="Jobs"></label>

                    <div class="col-sm-12 border-bottom">
                        <select class="form-select shadow-none p-0 border-0 form-control-line" asp-for="JobId" >
                            @foreach(Job item in Model.Jobs){
                                <option value="@item.Id" class="text-black" >@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <div class="col-sm-12">
                        <button class="btn btn-success" type="submit">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>